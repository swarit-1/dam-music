rules_version = '2';

// Firebase Storage Security Rules for DAM Music App
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile images - only authenticated users can upload their own profile pictures
    match /profile-images/{userId}/{imageId} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
      
      // Allow write only if the user is uploading to their own folder
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');  // Only images
    }
    
    // Video uploads - authenticated users can upload videos
    match /videos/{userId}/{videoId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 100 * 1024 * 1024;  // Max 100MB
    }
    
    // Song uploads - authenticated users can upload audio files
    match /songs/{userId}/{songId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 50 * 1024 * 1024  // Max 50MB
                   && request.resource.contentType.matches('audio/.*');  // Only audio files
    }
    
    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

